// You are using Java

import java.sql.*;

import java.util.*;
 
class main{

    public static void main(String[] args)

    {

        Scanner sc = new Scanner(System.in);

        try

        {

            Connection con = createConnection();

            createTable();

            insertRecord(sc);

            displayRecord();

        }

        catch(SQLException e)

        {

            System.out.println(e.getMessage());

        }

    }

    public static Connection createConnection()throws SQLException

    {

        String url = "jdbc:mysql://localhost/ri_db";

        String user = "test";

        String pwd = "test123";

        Connection con = DriverManager.getConnection(url,user,pwd);

        return con;

    }

    public static void displayRecord()throws SQLException

    {

        Connection con = createConnection();

        String displayQuery = "select * from ShoppingList order by ProductId";

        Statement st = con.createStatement();

        ResultSet rst = st.executeQuery(displayQuery);

        while(rst.next())

        {

            String id = rst.getString(1);

            String name = rst.getString(2);

            double price = rst.getDouble(3);

            String stat = rst.getString(4);

            // System.out.println("ProductID: "+id+", ProductName: "+name+", Price: "+price+", Status: "+stat);

            System.out.printf("ProductId: "+id+", ProductName: "+name+", Price: %.2f",price);

            System.out.printf(", Status: "+stat);

        }

    }

    public static void insertRecord(Scanner sc)throws SQLException

    {

        Connection con = createConnection();

        String inQuery = "INSERT INTO ShoppingList(ProductId, ProductName, Price, Status) values"+

        "('F001','Fan',100.00,'Available'),"+

        "('WM001','Washing Machine',200.00,'Not Available'),"+

        "('L001','Laptop',300.00,'Available'),"+

        "('TV001','Television',400.00,'Available'),"+

        "('AC001','Air Conditioner',500.00,'Not Available');";

        PreparedStatement pst  = con.prepareStatement(inQuery);

        pst.executeUpdate();

        // displayRecord();

    }

    public static void createTable()throws SQLException

    {

        Connection con = createConnection();

        String crt = "create table ShoppingList(ProductId varchar(20),ProductName varchar(100),Price decimal(10,2),Status ENUM('Available','Not Available'));";

        try

        {

            Statement st = con.createStatement();

            st.executeUpdate(crt);

        }

        catch(SQLException e)

        {

            System.out.println(e.getMessage());

        }

    }

}
 
Session 1 Q1
 
// You are using Java

import java.sql.*;

import java.util.*;
 
class ShoppingList

{

    private String ProductID;

    private String ProductName;

    private Double price;

    private String status;

    public ShoppingList(String ProductID, String ProductName, double price, String status){

        this.ProductID = ProductID;

        this.ProductName = ProductName;

        this.price = price;

        this.status = status;

    }

    @Override

    public String toString(){

        return "ShoppingProduct{ProductID="+this.ProductID+"ProductName="+this.ProductName+"Price="+this.price+"Status="+this.status+"}";

    }

}
 
class main{

    public static void main(String[] args)

    {

        Scanner sc = new Scanner(System.in);

        System.out.println("Products sorted by price in Highest to lower order: ");

        try

        {

            Connection con = createConnection();

            // createTable();

            // insertRecord(sc);

            displayRecord();

        }

        catch(SQLException e)

        {

            System.out.println(e.getMessage());

        }

    }

    public static Connection createConnection()throws SQLException

    {

        String url = "jdbc:mysql://localhost/ri_db";

        String user = "test";

        String pwd = "test123";

        Connection con = DriverManager.getConnection(url,user,pwd);

        return con;

    }

    public static void displayRecord()throws SQLException

    {

        Connection con = createConnection();

        String displayQuery = "select * from ShoppingList order by Price desc;";

        Statement st = con.createStatement();

        ResultSet rst = st.executeQuery(displayQuery);

        while(rst.next())

        {

            String id = rst.getString(1);

            String name = rst.getString(2);

            double price = rst.getDouble(3);

            String stat = rst.getString(4);

            System.out.println("ShoppingProduct{ProductID= '"+id+"', ProductName= '"+name+"', Price= "+price+", Status= '"+stat+"'}");

        }

    }
 
}
 
S1 Q2
 
// You are using Java

import java.sql.*;

import java.util.*;
 
class ShoppingList

{

    private String ProductID;

    private String ProductName;

    private Double price;

    private String status;

    public ShoppingList(String ProductID, String ProductName, double price, String status){

        this.ProductID = ProductID;

        this.ProductName = ProductName;

        this.price = price;

        this.status = status;

    }

    @Override

    public String toString(){

        return "ShoppingProduct{ProductID="+this.ProductID+"ProductName="+this.ProductName+"Price="+this.price+"Status="+this.status+"}";

    }

}
 
class main{

    public static void main(String[] args)

    {

        Scanner sc = new Scanner(System.in);

        System.out.println("Available Products: ");

        try

        {

            Connection con = createConnection();

            // createTable();

            // insertRecord(sc);

            displayRecord();

        }

        catch(SQLException e)

        {

            System.out.println(e.getMessage());

        }

    }

    public static Connection createConnection()throws SQLException

    {

        String url = "jdbc:mysql://localhost/ri_db";

        String user = "test";

        String pwd = "test123";

        Connection con = DriverManager.getConnection(url,user,pwd);

        return con;

    }

    public static void displayRecord()throws SQLException

    {

        Connection con = createConnection();

        String displayQuery = "select * from ShoppingList where Status = 'Available';";

        Statement st = con.createStatement();

        ResultSet rst = st.executeQuery(displayQuery);

        while(rst.next())

        {

            String id = rst.getString(1);

            String name = rst.getString(2);

            double price = rst.getDouble(3);

            String stat = rst.getString(4);

            System.out.println("ShoppingProduct{ProductID= '"+id+"', ProductName= '"+name+"', Price= "+price+", Status= '"+stat+"'}");

        }

    }
 
}
 
S1 Q3
 
// You are using Java

import java.sql.*;

import java.util.*;
 
class demo{

    public void str(){

        System.out.println("this");

    }

}
 
class main{

    public static void main(String[] args)

    {

        Scanner sc = new Scanner(System.in);

        System.out.println("Products sorted by price in descending order: ");

        // System.out.println();

        try

        {

            Connection con = createConnection();

            // createTable();

            // insertRecord(sc);

            displayRecord();

            availDisplayRecord();

        }

        catch(SQLException e)

        {

            System.out.println(e.getMessage());

        }

    }

    public static Connection createConnection()throws SQLException

    {

        String url = "jdbc:mysql://localhost/ri_db";

        String user = "test";

        String pwd = "test123";

        Connection con = DriverManager.getConnection(url,user,pwd);

        return con;

    }

    public static void displayRecord()throws SQLException

    {

        Connection con = createConnection();

        String displayQuery = "select * from ShoppingList order by Price desc;";

        Statement st = con.createStatement();

        ResultSet rst = st.executeQuery(displayQuery);

        while(rst.next())

        {

            String id = rst.getString(1);

            String name = rst.getString(2);

            double price = rst.getDouble(3);

            String stat = rst.getString(4);

            System.out.println("ShoppingProduct{ProductID= '"+id+"', ProductName= '"+name+"', Price= "+price+", Status= '"+stat+"'}");

        }

    }

    public static void availDisplayRecord()throws SQLException

    {

        System.out.println();

        System.out.println("Available products: ");

        Connection con = createConnection();

        String availdisplayQuery = "select * from ShoppingList where Status='Available';";

        Statement st = con.createStatement();

        ResultSet rst = st.executeQuery(availdisplayQuery);

        while(rst.next())

        {

            String id = rst.getString(1);

            String name = rst.getString(2);

            double price = rst.getDouble(3);

            String stat = rst.getString(4);

            System.out.println("ShoppingProduct{ProductID= '"+id+"', ProductName= '"+name+"', Price= "+price+", Status= '"+stat+"'}");

        }

    }
 
}
 
