import java.sql.*;
class main{
    public static void main(String[] args){
       try{
         Connection con=setConnection();  
       }catch(SQLException e){
           e.printStackTrace();
       } 
       System.out.println("Successfully connected to the database.");
    }
    public static Connection setConnection() throws SQLException{
     String url="jdbc:mysql://localhost/ri_db";
     String user="test";
     String pass="test123";
     Connection conObj=DriverManager.getConnection(url,user,pass);
     return conObj;
    }
}

import java.sql.*;
import java.util.Scanner;
class main{
    public static void main(String[] args){
            Scanner sc=new Scanner(System.in);
       try{
         Connection con=setConnection(); 
         String create="Create table contacts(id Integer PRIMARY KEY,name varchar(100),email varchar(100),phone_number varchar(100),city varchar(100))";
         PreparedStatement ps=con.prepareStatement(create);
          ps.executeUpdate();
         System.out.println("Table 'contacts' created successfully.");
         insertData(sc);
       }catch(SQLException e){
           e.printStackTrace();
       } 
    
    }
    public static Connection setConnection() throws SQLException{
     String url="jdbc:mysql://localhost/ri_db";
     String user="test";
     String pass="test123";
     Connection conObj=DriverManager.getConnection(url,user,pass);
     return conObj;
    }
     public static void insertData(Scanner sc) throws SQLException{
         Connection con=setConnection();
        String insertQuery="INSERT INTO contacts(id,name,email,phone_number,city) VALUES(?,?,?,?,?)";
        PreparedStatement stmt=con.prepareStatement(insertQuery);
        int id=1;
        String name="Ravi Kumar";
        String email="ravi@example.com";
        String phone_number="9876543210";
        String city="Delhi";
        
          stmt.setInt(1,id);
          stmt.setString(2,name);
          stmt.setString(3,email);
          stmt.setString(4,phone_number);
          stmt.setString(5,city);
          
        stmt.executeUpdate();
        System.out.println("Data inserted successfully.");
     }
}


import java.sql.*;
class main{
    public static void main(String[] args){
       try{
         Connection con=setConnection();
         display();
       }catch(SQLException e){
           e.printStackTrace();
       } 
       
    }
    public static Connection setConnection() throws SQLException{
     String url="jdbc:mysql://localhost/ri_db";
     String user="test";
     String pass="test123";
     Connection conObj=DriverManager.getConnection(url,user,pass);
     return conObj;
    }
    public static void  display() throws SQLException{
      Connection con=setConnection();
      String quer="SELECT * FROM contacts";
      Statement st=con.createStatement();
      ResultSet rs=st.executeQuery(quer);
      while(rs.next()){
        int rid=rs.getInt(1);
        String rname=rs.getString(2);
        String remail=rs.getString(3);
        long rphone=rs.getLong(4);
        String rcity=rs.getString(5);
        System.out.println("ID: "+rid+", Name: "+rname+", Email: "+remail+", Phone Number: "+rphone+", City: "+rcity);
      }  
    }
}


import java.sql.*;
class main{
    public static void main(String[] args){
       try{
         Connection con=setConnection(); 
         display();
       }catch(SQLException e){
           e.printStackTrace();
       } 
       //System.out.println("Successfully connected to the database.");
    }
    public static Connection setConnection() throws SQLException{
     String url="jdbc:mysql://localhost/ri_db";
     String user="test";
     String pass="test123";
     Connection conObj=DriverManager.getConnection(url,user,pass);
     return conObj;
    }
      public static void  display() throws SQLException{
      Connection con=setConnection();
      String quer="SELECT * FROM contacts";
      Statement st=con.createStatement();
      ResultSet rs=st.executeQuery(quer);
      int count=0;
      while(rs.next()){
          count++;
        if(count==2){
        int rid=rs.getInt(1);
        String rname=rs.getString(2);
        String remail=rs.getString(3);
        long rphone=rs.getLong(4);
        String rcity=rs.getString(5);
        
        System.out.println("ID: "+rid+", Name: "+rname+", Email: "+remail+", Phone Number: "+rphone+", City: "+rcity);
        }
          
      }
   }
}
