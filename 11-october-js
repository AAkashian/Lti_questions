mul(){
var a=document.getElementById("num1").value;
var b=document.getElementById("num2").value;
var product=document.getElementById("ProductResult");
var res=a+b;
product.textContent=`statement ${res}`;
}



function alertTriggered(){
    var fields=document.querySelectorAll('input');
    for(var i=0;i<fields.length;i++){
        if(fields[i].value===''){
            alert('Please fill out all fields.');
            return false;
        }
    }
    return true;
}




var currentInput=''
var output

document.querySelectorAll('button').forEach(button =>{
    button.addEventListener('click',()=>{
        var buttonText=button.textContent
        if(!isNaN(buttonText)||'*/-+'.includes(buttonText)){
            handleInput(buttonText)
        }else if(buttonText==='='){
             handelEquals();
        }else if(buttonText==='C'){
            currentInput=''
            updateDisplay(0)
        }
    })
});

function handleInput(input){
    currentInput=currentInput+input
    updateDisplay(currentInput)
}
function handelEquals(){
    output=eval(currentInput)
    updateDisplay(output)
}

function updateDisplay(data){
    display.textContent=data
}
