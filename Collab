import java.sql.*;
import java.util.*;

class Main{
    public static void main(String args[]){
        Scanner sc= new Scanner(System.in);
        try{
            String url="jdbc:mysql://localhost/ri_db";
            String user="test";
            String pass="test123";
            Connection con=DriverManager.getConnection(url,user,pass);
            Statement stmt=con.createStatement();
            int choice=sc.nextInt();
            switch(choice){
                case 1:
                    insert(con,stmt,sc);
                    break;
                case 2:
                    update(con,stmt,sc);
                    break;
                case 3:
                    delete(con,stmt,sc);
                    break;
                case 4:
                    sort(con,stmt,sc);
                    break;
                default:
                    System.out.println("Invalid Choice");
            }
        }catch(SQLException e){
            System.out.println(e.getMessage());
        }
    }
    public static void display(Connection con,Statement stmt,Scanner sc)throws SQLException{
        String query="Select * from Content";
        ResultSet rs=stmt.executeQuery(query);
        while(rs.next()){
            int id=rs.getInt(1);
            String name=rs.getString(2);
            double per=rs.getDouble(3);
            double time=rs.getDouble(4);
            String date=rs.getString(5);
            String desc=rs.getString(6);
            System.out.println("Id: "+id+", Name: "+name+", Percentage: "+per+", timeSpent: "+time+", Date: "+date+", Description: "+desc);
        }
    }
    public static void insert(Connection con,Statement stmt,Scanner sc)throws SQLException{
        String query="insert into Content values(?,?,?,?,?,?)";
        int id=sc.nextInt();
        sc.nextLine();
        String name=sc.nextLine();
        double per=sc.nextDouble();
        double time= sc.nextDouble();
        sc.nextLine();
        String date=sc.nextLine();
        String desc=sc.nextLine();
        PreparedStatement ptmt=con.prepareStatement(query);
        ptmt.setInt(1,id);
        ptmt.setString(2,name);
        ptmt.setDouble(3,per);
        ptmt.setDouble(4,time);
        ptmt.setString(5,date);
        ptmt.setString(6,desc);
        int row=ptmt.executeUpdate();
        if(row>0){
            System.out.println("Inserted Successfully");
            display(con,stmt,sc);
        }

    }
    public static void update(Connection con,Statement stmt,Scanner sc)throws SQLException{
        String query="Update Content set CompletionPercentage=?,TimeSpent=? where ContentId=?";
        int id=sc.nextInt();

        double per=sc.nextDouble();
        double time= sc.nextDouble();

        PreparedStatement ptmt=con.prepareStatement(query);
        ptmt.setInt(3,id);

        ptmt.setDouble(1,per);
        ptmt.setDouble(2,time);

        int row=ptmt.executeUpdate();
        if(row>0){
            System.out.println("Updated Successfully");
            display(con,stmt,sc);
        }

    }
    public static void delete(Connection con,Statement stmt,Scanner sc)throws SQLException{
        String query="delete from Content where ContentId=?";
        int id=sc.nextInt();

        PreparedStatement ptmt=con.prepareStatement(query);
        ptmt.setInt(1,id);

        int row=ptmt.executeUpdate();
        if(row>0){
            System.out.println("Deleted Successfully");
            display(con,stmt,sc);
        }

    }
    public static void sort(Connection con,Statement stmt,Scanner sc)throws SQLException{
        String query="Select * from Content order by CompletionPercentage";
        System.out.println("Sorted Successfully");
        ResultSet rs=stmt.executeQuery(query);
        while(rs.next()){
            int id=rs.getInt(1);
            String name=rs.getString(2);
            double per=rs.getDouble(3);
            double time=rs.getDouble(4);
            String date=rs.getString(5);
            String desc=rs.getString(6);
            System.out.println(id+" "+name+" "+per+" "+time+" "+date+" "+desc);
        }
    }
}

======================================================ABSTRACTION==========================================
import java.util.*;

abstract class Payment{
    abstract void makepayment();
   public void PaymentDetails(){
       System.out.println("Processing the payment details....");
   } 
}

class creditPayment extends Payment{
    @Override
     void makepayment(){
        System.out.println("Payment done using credit card");
    }
}
class paypalPayment extends Payment{
     @Override
     public void makepayment(){
        System.out.println("Payment done using credit card");
    }
}
class bankTransferPayment extends Payment{
     @Override
    public void makepayment(){
        System.out.println("Payment done using credit card");
    }
}
class Main{
    public static void main(String[] args){
        Payment obj=new creditPayment();
        Payment obj2=new paypalPayment();
        Payment obj3=new bankTransferPayment();
        obj.makepayment();
        obj2.makepayment();
        obj3.makepayment();
    }
}



class main{
    public static void main(String[] args)
    {
        try
        {
            m1();
        }
        catch(ArithmeticException | NullPointerException | ArrayIndexOutOfBoundsException e)
        {
            System.out.print(e.getMessage());
        }
    }
    public static void m1() throws ArithmeticException, NullPointerException, ArrayIndexOutOfBoundsException
    {
        int a = 10;
        int b = 1;
        int res = a/b;
        // String x = null;
        // x.length();
        int[] arr = {1,2,3,4};
        int w = arr[6];
    }
}
